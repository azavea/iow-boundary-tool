[
  {
    "name": "${name}",
    "image": "${image}",
    "essential": true,
    "command": [
      "-b :${port}",
      "--workers=${workers}",
      "--timeout=60",
      "--access-logfile=-",
      "--access-logformat=%({X-Forwarded-For}i)s %(h)s %(l)s %(u)s %(t)s \"%(r)s\" %(s)s %(b)s \"%(f)s\" \"%(a)s\"",
      "--error-logfile=-",
      "--log-level=info",
      "--capture-output",
      "iow.wsgi"
    ],
    "environment": [
      {
        "name": "POSTGRES_HOST",
        "value": "${postgres_host}"
      },
      {
        "name": "POSTGRES_PORT",
        "value": "${postgres_port}"
      },
      {
        "name": "POSTGRES_USER",
        "value": "${postgres_user}"
      },
      {
        "name": "POSTGRES_PASSWORD",
        "value": "${postgres_password}"
      },
      {
        "name": "POSTGRES_DB",
        "value": "${postgres_db}"
      },
      {
        "name": "DJANGO_ENV",
        "value": "${environment}"
      },
      {
        "name": "DJANGO_SECRET_KEY",
        "value": "${django_secret_key}"
      },
      {
        "name": "DJANGO_LOG_LEVEL",
        "value": "${django_log_level}"
      },
      {
        "name": "DEFAULT_FROM_EMAIL",
        "value": "${default_from_email}"
      },
      {
        "name": "R53_PUBLIC_HOSTED_ZONE",
        "value": "${r53_public_hosted_zone}"
      },
      {
        "name": "IOW_TILES_HOST",
        "value": "${iow_tiles_host}"
      }
    ],
    "mountPoints": [],
    "portMappings": [
      {
        "containerPort": ${port},
        "hostPort": ${port},
        "protocol": "tcp"
      }
    ],
    "volumesFrom": [],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "log${environment}App",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${lower(project)}-app"
      }
    }
  }
]
